{
	"name": "youtube-alt",
	"description": "An alternative client of YouTube.",
	"author": "Wixonic <contact@wixonic.fr> (https://wixonic.fr)",
	"bugs": {
		"url": "https://github.com/Wixonic/YouTube-Alt/issues",
		"email": "contact@wixonic.fr"
	},
	"homepage": "https://github.com/Wixonic/YouTube-Alt#readme",
	"license": "MIT",
	"version": "1.0.0-dev-5",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Wixonic/YouTube-Alt.git"
	},
	"main": "app.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder build --mac --win --x64"
	},
	"engines": {
		"node": ">=16.x.x"
	},
	"dependencies": {
		"discord-rpc": "^4.0.1",
		"ytdl-core": "^4.11.4"
	},
	"devDependencies": {
		"electron": "^25.1.0",
		"electron-builder": "^23.6.0"
	},
	"build": {
		"appId": "fr.wixonic.youtube-alt",
		"artifactName": "${name}.v${version}.${os}.${ext}",
		"executableName": "YouTube Alt",
		"productName": "YouTube Alt",
		
		"mac": {
			"files": [
				"assets/**",
				"!assets/ffmpeg.exe",
				"!assets/icon.ico",
				"node_modules/**",
				"pages/**",
				"app.js",
				"config.json"
			],
			"icon": "./assets/icon.icns",
			"target": "dmg"
		},

		"win": {
			"files": [
				"assets/**",
				"!assets/ffmpeg",
				"!assets/icon.icns",
				"node_modules/**",
				"pages/**",
				"app.js",
				"config.json"
			],
			"icon": "./assets/icon.ico",
			"target": "nsis"
		}
	}
}